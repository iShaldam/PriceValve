# Server Configuration
PORT=5001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend URL (for Steam OpenID)
BACKEND_URL=http://localhost:5001

# Steam Web API
STEAM_API_KEY=your_steam_api_key_here

